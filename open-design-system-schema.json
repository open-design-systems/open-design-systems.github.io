{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Design System",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Automatically generated unique identifier for each item."
        },
        "meta": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "description"
            ]
        },
        "colors": {
            "type": "object",
            "properties": {},
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "meta": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "description"
                            ]
                        },
                        "light": {
                            "type": "object",
                            "properties": {
                                "hex": {
                                    "type": "string",
                                    "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
                                },
                                "rgba": {
                                    "type": "object",
                                    "properties": {
                                        "red": {
                                            "type": "string"
                                        },
                                        "green": {
                                            "type": "string"
                                        },
                                        "blue": {
                                            "type": "string"
                                        },
                                        "alpha": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "required": [
                                "hex",
                                "rgba"
                            ]
                        },
                        "dark": {
                            "type": "object",
                            "properties": {
                                "hex": {
                                    "type": "string",
                                    "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
                                },
                                "rgba": {
                                    "type": "object",
                                    "properties": {
                                        "red": {
                                            "type": "string"
                                        },
                                        "green": {
                                            "type": "string"
                                        },
                                        "blue": {
                                            "type": "string"
                                        },
                                        "alpha": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "required": [
                                "hex",
                                "rgba"
                            ]
                        }
                    },
                    "required": [
                        "meta",
                        "light",
                        "dark"
                    ]
                }
            },
            "additionalProperties": true
        },
        "typography": {
            "type": "object",
            "properties": {},
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "meta": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "description"
                            ]
                        },
                        "fontFamily": {
                            "type": "string"
                        },
                        "fontSize": {
                            "type": "string"
                        },
                        "fontWeight": {
                            "type": "string"
                        },
                        "lineHeight": {
                            "type": "string"
                        },
                        "letterSpacing": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "meta",
                        "fontFamily",
                        "fontSize",
                        "fontWeight",
                        "lineHeight",
                        "letterSpacing"
                    ]
                }
            },
            "additionalProperties": true
        },
        "spacing": {
            "type": "object",
            "properties": {},
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "meta": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "description"
                            ]
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "meta",
                        "value"
                    ]
                }
            },
            "additionalProperties": true
        },
        "surface": {
            "type": "object",
            "properties": {},
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "meta": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "description"
                            ]
                        },
                        "borderColor": {
                            "type": "string"
                        },
                        "borderRadius": {
                            "type": "string"
                        },
                        "borderWidth": {
                            "type": "string"
                        },
                        "boxShadow": {
                            "type": "string"
                        },
                        "backgroundColor": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "meta",
                        "borderColor",
                        "borderRadius",
                        "borderWidth",
                        "boxShadow",
                        "backgroundColor"
                    ]
                }
            }
        },
        "shadows": {
            "type": "object",
            "properties": {},
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "meta": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "description"
                            ]
                        },
                        "elevation": {
                            "type": "string"
                        },
                        "shadowColor": {
                            "type": "string",
                            "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
                        },
                        "shadowOpacity": {
                            "type": "number"
                        },
                        "shadowOffset": {
                            "type": "object",
                            "properties": {
                                "width": {
                                    "type": "number"
                                },
                                "height": {
                                    "type": "number"
                                }
                            }
                        },
                        "shadowRadius": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "meta",
                        "elevation",
                        "shadowColor",
                        "shadowOpacity",
                        "shadowOffset",
                        "shadowRadius"
                    ]
                }
            },
            "additionalProperties": true
        },
        "primitives": {
            "type": "object",
            "properties": {},
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "meta": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "description"
                            ]
                        },
                        "default": {
                            "type": "object",
                            "properties": {
                                "fontSize": {
                                    "type": "string"
                                },
                                "padding": {
                                    "type": "string"
                                },
                                "borderRadius": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": true
                        },
                        "size": {
                            "type": "object",
                            "properties": {},
                            "patternProperties": {
                                ".*": {
                                    "type": "object",
                                    "properties": {
                                        "fontSize": {
                                            "type": "string"
                                        },
                                        "padding": {
                                            "type": "string"
                                        },
                                        "borderRadius": {
                                            "type": "string"
                                        }
                                    },
                                    "additionalProperties": true
                                }
                            },
                            "additionalProperties": true
                        },
                        "variant": {
                            "type": "object",
                            "properties": {},
                            "patternProperties": {
                                ".*": {
                                    "type": "object",
                                    "properties": {
                                        "backgroundColor": {
                                            "type": "string"
                                        },
                                        "color": {
                                            "type": "string"
                                        },
                                        "borderColor": {
                                            "type": "string"
                                        }
                                    },
                                    "additionalProperties": true
                                }
                            },
                            "additionalProperties": true
                        }
                    },
                    "required": [
                        "meta"
                    ]
                }
            }
        },
        "additionalProperties": true
    },
    "required": [
        "id",
        "meta",
        "colors",
        "typography",
        "spacing",
        "surface",
        "shadows",
        "primitives"
    ]
}
