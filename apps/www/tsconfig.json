{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@open-design-system/typescript-config/react-app.json",
  "compilerOptions": {
    "isolatedModules": true,
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src/vite-env.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": ["node_modules"]
}
