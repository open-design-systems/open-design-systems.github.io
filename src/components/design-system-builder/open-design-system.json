{
    "$schema": "../../../open-design-system-schema.json",
    "id": "default-system",
    "meta": {
      "name": "Default Design System",
      "description": "A basic design system with default values based on Material Design."
    },
    "colors": {
      "primary": {
        "light": {
          "hex": "#6200ea",
          "rgba": {
            "red": "98",
            "green": "0",
            "blue": "234",
            "alpha": "255"
          }
        },
        "dark": {
          "hex": "#3700b3",
          "rgba": {
            "red": "55",
            "green": "0",
            "blue": "179",
            "alpha": "255"
          }
        }
      },
      "secondary": {
        "light": {
          "hex": "#03dac6",
          "rgba": {
            "red": "3",
            "green": "218",
            "blue": "198",
            "alpha": "255"
          }
        },
        "dark": {
          "hex": "#018786",
          "rgba": {
            "red": "1",
            "green": "135",
            "blue": "134",
            "alpha": "255"
          }
        }
      },
      "background": {
        "light": {
          "hex": "#ffffff",
          "rgba": {
            "red": "255",
            "green": "255",
            "blue": "255",
            "alpha": "255"
          }
        },
        "dark": {
          "hex": "#121212",
          "rgba": {
            "red": "18",
            "green": "18",
            "blue": "18",
            "alpha": "255"
          }
        }
      }
    },
    "typography": {
      "body": {
        "fontFamily": "Roboto, Arial, sans-serif",
        "fontSize": "16px",
        "fontWeight": "400",
        "lineHeight": "1.5",
        "letterSpacing": "0.5px"
      },
      "heading": {
        "fontFamily": "Roboto, Arial, sans-serif",
        "fontSize": "24px",
        "fontWeight": "700",
        "lineHeight": "1.3",
        "letterSpacing": "0.2px"
      }
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px"
    },
    "borders": {
      "radius": {
        "small": "4px",
        "medium": "8px",
        "large": "16px"
      },
      "width": "1px",
      "style": "solid"
    },
    "shadows": {
      "elevation1": {
        "elevation": "1dp",
        "shadowColor": "#000000",
        "shadowOpacity": 0.1,
        "shadowOffset": { "width": 0, "height": 1 },
        "shadowRadius": 1.0
      },
      "elevation2": {
        "elevation": "2dp",
        "shadowColor": "#000000",
        "shadowOpacity": 0.2,
        "shadowOffset": { "width": 0, "height": 2 },
        "shadowRadius": 2.0
      }
    },
    "primitives": {
      "button": {
        "default": {
          "fontSize": "16px",
          "padding": "8px 16px",
          "borderRadius": "4px"
        },
        "size": {
          "small": {
            "fontSize": "14px",
            "padding": "4px 8px",
            "borderRadius": "2px"
          },
          "medium": {
            "fontSize": "16px",
            "padding": "8px 16px",
            "borderRadius": "4px"
          },
          "large": {
            "fontSize": "18px",
            "padding": "12px 24px",
            "borderRadius": "8px"
          }
        },
        "variant": {
          "primary": {
            "backgroundColor": "{colors.primary.light.hex}",
            "color": "{colors.background.light.hex}",
            "borderColor": "{colors.primary.light.hex}"
          },
          "secondary": {
            "backgroundColor": "{colors.secondary.light.hex}",
            "color": "{colors.background.light.hex}",
            "borderColor": "{colors.secondary.light.hex}"
          }
        }
      }
    }
  }
  