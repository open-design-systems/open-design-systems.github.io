{
  "name": "@opends/tailwind",
  "version": "1.0.0",
  "description": "A Tailwind Plugin to use out of the box Open Design System schema",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/*.js",
    "./dist/*.mjs",
    "./dist/index.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": "https://github.com/open-design-systems/open-design-systems.github.io",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest"
  },
  "keywords": [
    "open-design-system",
    "ods",
    "tailwind",
    "tailwind-plugin"
  ],
  "author": "Marcos BÃ©rgamo <marcos@thedon.com.br>",
  "license": "MIT",
  "devDependencies": {
    "@open-design-system/eslint-config": "workspace:^",
    "@open-design-system/typescript-config": "workspace:^",
    "@types/node": "^20.12.12",
    "eslint": "8.57.0",
    "tailwindcss": "^3.4.5",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "vitest": "^2.0.4"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0 || insiders"
  },
  "dependencies": {
    "@opends/schema": "workspace:^"
  }
}
